<div class="row mt-4">
  <div class="col-md-6 text-center">
    <div id="accountCreated"></div>
    <h3>Welcome, {{user}}!</h3>
    <p>
      <a href="/phaserGame/index.html"><button class="btn btn-dark">PLAY NOW</button></a>
    </p>
  </div>

  <div class="card col-md-6 text-center">
  <div class="card-body overflow-auto" style="max-height: 400px;">
    <h2>Recent Scores</h2>
    {{#each scores}}
    <div class="score-entry">
      <p>{{username}}, {{score}}</p>
    </div>
    {{/each}}
  </div>
</div>

</div>
<script src="/js/profile.js"></script>